{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules", "tests" ]
}
