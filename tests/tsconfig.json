{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./spec",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDirs": ["./ts"]
  },
  "include": [ "./ts/**/*.ts" ]
}
